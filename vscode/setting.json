// 将设置放入此文件中以覆盖默认设置
{
    "workbench.colorCustomizations": {
        "activityBar.foreground": "#ee6e73",
        "activityBarBadge.background": "#f44336"
    },
    // Editor 
    // 控制字体系列。
    "editor.fontFamily": "Meslo LG M for Powerline",
    // 控制字体粗细。
    "editor.fontWeight": "normal",
    // 控制字体大小。
    "editor.fontSize": 16,
    // Terminal    
    // 自定义要在 OS X 上运行的终端应用程序。
    "terminal.external.osxExec": "iTerm.app",
    // 控制是否自动保存更新后的文件。接受的值:“off”、“afterDelay”、“onFocusChange”(编辑器失去焦点)、“onWindowChange”(窗口失去焦点)。如果设置为“afterDelay”，则可在 "files.autoSaveDelay" 中配置延迟。
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1500,
    // 启用要发送给 Microsoft 的使用情况数据和错误。
    "telemetry.enableTelemetry": false,
    // 启用要发送给 Microsoft 的故障报表。
    // 此选项需重启才可生效。
    "telemetry.enableCrashReporter": false,
    "window.zoomLevel": 0,
    "terminal.integrated.fontSize": 16,
    "window.titleBarStyle": "custom",
    "editor.minimap.enabled": true,
    "grunt.autoDetect": "off",
    "terminal.integrated.shell.osx": "zsh",
    "emmet.includeLanguages": {
        "vue-html": "html",
        "vue": "html"
    },
    "emmet.syntaxProfiles": {
        "vue-html": "html",
        "vue": "html"
    },
    "vetur.validation.template": false,
    "workbench.sideBar.location": "left",
    "editor.minimap.showSlider": "always",
    "go.autocompleteUnimportedPackages": true,
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "editor.quickSuggestions": {
        "strings": true
    },
    "extensions.ignoreRecommendations": true,
    "emmet.triggerExpansionOnTab": true,
    "material-icon-theme.showUpdateMessage": false,
    "workbench.editor.swipeToNavigate": true,
    "[javascript]": {
        
    },
    "go.addTags": {
        "tags": "bson,json",
        "options": "",
        "promptForTags": true,
        "transform": "snakecase"
    },
    "go.editorContextMenuCommands": {
        "toggleTestFile": false,
        "addTags": true,
        "removeTags": true,
        "testAtCursor": false,
        "testFile": false,
        "testPackage": false,
        "generateTestForFunction": true,
        "generateTestForFile": true,
        "generateTestForPackage": true,
        "addImport": true,
        "testCoverage": false,
        "playground": true
    },
    "git.enableSmartCommit": true,
    "workbench.startupEditor": "newUntitledFile",
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django"
    ],
    "go.gotoSymbol.includeGoroot": true,
    "go.inferGopath": true,
    "workbench.statusBar.feedback.visible": false,
    "workbench.settings.editor": "json",
    "python.linting.flake8Enabled": true,
    "python.pythonPath": "/usr/local/anaconda3/bin/python",
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E501",
    ],
    "workbench.iconTheme": "material-icon-theme",
    "javascript.validate.enable": false
}